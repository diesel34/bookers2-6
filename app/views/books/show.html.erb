<div class="row">
  <div class="col-md-3">
  
	<h2>User info</h2>
	<%= render 'users/profile', user: @user %>

	<h2 class="mt-3">New book</h2>
	<%= render 'books/newform', book: @newbook %>
  </div>

  <div class="col-md-8 offset-md-1">
	<h2>Book detail</h2>
	<table class="table">
	  <tr>
		<td>
		  <%= link_to user_path(@user.id) do %>
		<%= image_tag @book.user.get_profile_image(100,100) %>
		  <br>
		  <%= @user.name %>
		  <% end %>
		</td>
		<td><%= link_to @book.title, book_path(@book) %></td>
		<td><%= @book.body %></td>
			<td>コメント件数:<%= @book.book_comments.count %></td>	
		<% if @book.user == current_user %>
		  <td><%= link_to "Edit", edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
		  <td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に削除してもいいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
		<% end %>
	 </table>
	 
	  <span id="comments-<%= @book.id %>">
	   <%= render 'books/comments', book: @book %>
	 </span>
    
    <%= form_with(model:[@book, @book_comment], local: false, method: :post) do |f| %>
		  <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに", class: "w-100" %>
		  <%= f.submit "送信する", class: "btn btn-dark" %>
		<% end %>

  </div>
</div>