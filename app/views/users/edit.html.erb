<% if @user.errors %>
        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      <% end %>

<div class="row">
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2>User   info</h2>

<%= form_for(@user, url: user_path(current_user.id)) do |f| %>
<div class="form-group">
    <h6>Name</h6>
<%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class: "form-control name" %>
</div>    
<div class="form-group">
    <h6>Image</h6>
<%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
</div>    
<div class="form-group">
    <h6>introduction</h6>
      <%= f.text_area :introduction, class: "form-control introduction"%>
</div>
<div class="form-group">
    <%= f.submit 'Update User', class: "btn btn-secondary" %>
</div>
<% end %>

</div>
</div>